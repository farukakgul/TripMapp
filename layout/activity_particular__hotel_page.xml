<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Particular_Hotel_page"
    android:background="@android:color/white"
    >
    <ImageView
        android:id="@+id/hotel_page_icon"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/hotel_icon"
        android:layout_marginTop="60dp"
        />



    <TextView
        android:id="@+id/_hotel_name_hint"
        android:layout_width="150sp"
        android:layout_height="30dp"
        android:hint="name of hotel"
        android:layout_below="@id/hotel_page_icon"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        android:background="@color/LoginButton"
        />


    <ListView
        android:id="@+id/list_of_information_hotel"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="230dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/_hotel_name_hint"
        android:divider="#806326"
        android:dividerHeight="1dp"
        />

    <Button
        android:id="@+id/view_comment_button_hotels"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:layout_centerHorizontal="true"
        android:text="VIEW COMMENTS"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:layout_below="@id/list_of_information_hotel"
        />
    <Button
        android:id="@+id/add_rate_button"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:layout_centerHorizontal="true"
        android:text="ADD COMMENT RATE"
        android:textSize="17sp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_below="@id/view_comment_button_hotels"
        />



</RelativeLayout>