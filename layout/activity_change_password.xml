<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Change_password">
    android:background="@android:color/white"
    />


    <ImageView
        android:id="@+id/logo_image4"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/tripmap" />

    <TextView
        android:id="@+id/tripmapp_name5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-3dp"
        android:text="@string/tripmapp_name2"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Enter your mail address..."
        android:layout_below="@id/tripmapp_name5"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/send_button"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:background="@color/LoginButton"
        android:text="Send"
        android:textSize="23sp"
        android:layout_alignEnd="@id/email_text"
        android:layout_marginTop="35sp"
        android:textAllCaps="false"
        android:layout_below="@id/email_text"
        />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/send_button"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
















