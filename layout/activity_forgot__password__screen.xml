<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forgot_Password_Screen">
    android:background="@android:color/white"
/>


    <ImageView
        android:id="@+id/logo_image"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="97dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/tripmap" />

    <TextView
        android:id="@+id/tripmapp_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-3dp"
        android:text="@string/tripmapp_name2"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />
    >
    <TextView
        android:id="@+id/name_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="name"
        android:layout_below="@id/tripmapp_name2"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/surname_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="surname"
        android:layout_below="@id/name_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/username_uneditable"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="username"
        android:layout_below="@id/surname_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />


