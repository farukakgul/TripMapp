    <ListView
        android:id="@+id/listQuestion3"
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp"
        android:layout_below="@+id/username_uneditable"
        android:divider="#806326"
        android:dividerHeight="1dp"
        />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Your Answer"
        android:layout_below="@id/listQuestion3"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/password_text2"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/username_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/password_again_text2"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Password ( Again )"
        android:layout_below="@id/password_text2"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:id="@+id/change_button"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:background="@color/LoginButton"
        android:text="Change"
        android:textSize="23sp"
        android:layout_alignEnd="@id/password_again_text2"
        android:layout_marginTop="35sp"
        android:textAllCaps="false"
        android:layout_below="@id/password_again_text2"
        android:onClick="transitionToMain"
        />




