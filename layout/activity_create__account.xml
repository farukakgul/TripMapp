<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Create_Account"
    android:background="@android:color/white"

    >


        <ImageView
            android:id="@+id/logo_image"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="97dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/tripmap" />

        <TextView
            android:id="@+id/tripmapp_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-3dp"
            android:text="@string/tripmapp_name2"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/enter_name_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:layout_below="@id/tripmapp_name2"
            android:layout_marginTop="50sp"
            android:layout_centerHorizontal="true"
            />

        <EditText
            android:id="@+id/enter_surname_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Enter your surname"
            android:layout_below="@id/enter_name_text"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:id="@+id/username_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Enter your email"
            android:layout_below="@id/enter_surname_text"
            android:layout_marginTop="20sp"
            android:layout_centerHorizontal="true"
            />


        <EditText
            android:id="@+id/password_text"
            android:layout_width="300sp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_below="@id/username_text"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:inputType="textPassword"
            />

