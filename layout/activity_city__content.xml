<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".City_Content"
    android:background="@android:color/white"
    >
    <TextView
        android:id="@+id/citytext"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=" ANKARA CITY CONTENT"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="23dp"
    />
    <ImageView
        android:id="@+id/city_map_image"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="270dp"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/citytext"
        android:src="@drawable/ankara_map" />

    <ImageView
        android:id="@+id/hotel_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/city_map_image"
        android:layout_marginLeft="40dp"
        android:src="@drawable/hotel_icon"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/hotel_button"
        android:layout_width="100sp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:text="Hotels"
        android:textSize="20sp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10sp"
        android:textAllCaps="false"
        android:layout_below="@id/hotel_icon"
        />



    <ImageView
        android:id="@+id/restaurant_icon"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="100dp"
        android:layout_below="@id/city_map_image"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/restaurant_icon"
        />

    <Button
        android:id="@+id/Restaurant_Button"
        android:layout_width="110sp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:text="Restaurant"
        android:textSize="20sp"
        android:layout_marginRight="65dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:textAllCaps="false"
        android:layout_below="@id/hotel_icon"
        />


    <ImageView
        android:id="@+id/place_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/hotel_icon"
        android:layout_marginLeft="40dp"
        android:src="@drawable/museum_icon"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/place_button"
        android:layout_width="100sp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:text="Places"
        android:textSize="20sp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="10sp"
        android:textAllCaps="false"
        android:layout_below="@id/place_icon"
        />

    <ImageView
        android:id="@+id/forum_icon"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@id/hotel_icon"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/forum_icon"
        android:layout_marginTop="60dp"
        />

    <Button
        android:id="@+id/Forum_button"
        android:layout_width="110sp"
        android:layout_height="30dp"
        android:background="@color/LoginButton"
        android:text="Forum"
        android:textSize="20sp"
        android:layout_marginRight="65dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:textAllCaps="false"
        android:layout_below="@id/forum_icon"
        />




</RelativeLayout>