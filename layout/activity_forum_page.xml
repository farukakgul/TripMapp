<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forum_page">
    android:background="@android:color/white"
    />

    <ImageView
        android:id="@+id/forum_page_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/forum2"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/commented_users3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forum_page_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Forum"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/commented_users_list"
        android:layout_width="370dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="290dp"
        android:layout_below="@+id/commented_users3"
        android:divider="#806326"
        android:dividerHeight="1dp"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/commented_users_list"
        android:id="@+id/add_comment_button"
        android:background="@color/LoginButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Add Comment Rate"
        android:textSize="18sp"
        />

</RelativeLayout>