<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".My_profile">
    android:background="@android:color/white"
    />

    <ImageView
    android:id="@+id/personal_icon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/personal"
    android:layout_marginTop="30dp"
    android:layout_centerHorizontal="true"    />

    <TextView
        android:id="@+id/name_text4"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="name"
        android:layout_below="@id/personal_icon"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/surname_text4"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="surname"
        android:layout_below="@id/name_text4"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/username_uneditable4"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:text="username"
        android:layout_below="@id/surname_text4"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/change_password_demand"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@color/LoginButton"
        android:text="Change Password"
        android:textSize="19sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:textAllCaps="false"
        android:layout_below="@id/username_uneditable4"
        />

    <ListView
        android:id="@+id/list_users"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/change_password_demand"
        android:layout_marginTop="40dp"
        android:divider="#806326"
        android:dividerHeight="1dp"
        />


</RelativeLayout>