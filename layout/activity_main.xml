<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/logo_image"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="190dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/tripmap" />

    <TextView
        android:id="@+id/tripmapp_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tripmapp_name"
        android:textSize="35dp"
        android:layout_below="@id/logo_image"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Mail"
        android:layout_below="@id/tripmapp_name"
        android:layout_marginTop="45sp"
        android:layout_centerHorizontal="true"
        />


    <EditText
        android:id="@+id/password_text1"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_below="@id/username_text"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/forgot_password_button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150sp"
        android:layout_height="30sp"
        android:layout_below="@id/password_text1"
        android:layout_marginTop="11dp"
        android:background="@android:color/white"
        android:text="@string/forgot"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_alignStart="@id/password_text1"
        android:textSize="15sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:background="@color/LoginButton"
        android:text="@string/login"
        android:textSize="23sp"
        android:layout_alignEnd="@id/password_text1"
        android:layout_marginTop="10sp"
        android:textAllCaps="false"
        android:layout_below="@id/forgot_password_button"
        />

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="250sp"
        android:layout_height="30sp"
        android:background="@android:color/white"
        android:text="@string/create_new_account"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:textStyle="italic|bold"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_button"
        android:textAllCaps="false"
        style="?android:attr/borderlessButtonStyle"
        />


</RelativeLayout>